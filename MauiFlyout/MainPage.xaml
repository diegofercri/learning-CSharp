<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="MauiFlyout.MainPage">
    <FlyoutPage.Flyout>
        <ContentPage Title="Menu">
            <StackLayout>
                <Button Text="Decimal Calculator" Clicked="OnOption1Clicked" BackgroundColor="{DynamicResource AccentColor}" TextColor="{DynamicResource BlackTextColor}" BorderWidth="0" CornerRadius="22"/>
                <Button Text="Binary Converter" Clicked="OnOption2Clicked" BackgroundColor="{DynamicResource AccentColor}" TextColor="{DynamicResource BlackTextColor}" BorderWidth="0" CornerRadius="22"/>
            </StackLayout>
        </ContentPage>
    </FlyoutPage.Flyout>
    <FlyoutPage.Detail>
        <NavigationPage x:Name="NavPage" Title="Start" BackgroundColor="{DynamicResource BackgroundColor}"/>
    </FlyoutPage.Detail>
</FlyoutPage>
