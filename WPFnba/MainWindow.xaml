<Window x:Class="WPFnba.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFnba"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label x:Name="teamsLabel" Content="Teams" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold"/>
        <ListView x:Name="listTeams" Margin="0,52,0,0">
            <ListView.View>
                <GridView>
                    <!-- Headers left align -->
                    <GridView.ColumnHeaderContainerStyle>
                        <Style TargetType="GridViewColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Left" />
                        </Style>
                    </GridView.ColumnHeaderContainerStyle>

                    <!-- ID Column -->
                    <GridViewColumn Header="ID" DisplayMemberBinding="{Binding id}" Width="40" />

                    <!-- Conference Column -->
                    <GridViewColumn Header="Conference" DisplayMemberBinding="{Binding conference}" Width="75" />

                    <!-- Image Column -->
                    <GridViewColumn Header="Logo" Width="75">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Border Width="50" Height="50" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Image Source="{Binding teamLogoUrl}" Stretch="Uniform" />
                                </Border>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <!-- Name Column -->
                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding name}" Width="200" />

                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
