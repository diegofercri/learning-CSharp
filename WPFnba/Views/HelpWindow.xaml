<Window x:Class="WPFnba.View.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFnba.View"
        mc:Ignorable="d"
        Title="HelpWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="1" Text="NBA App Help" FontSize="24" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" Padding="10"/>

        <ScrollViewer Grid.Row="1" Grid.Column="1" Margin="20,0,20,20">
            <StackPanel>
                <!-- Introduction to the help guide -->
                <TextBlock Text="Welcome to the NBA team management application." FontSize="16" FontWeight="Bold" Margin="0,10,0,5"/>
                <TextBlock Text="This guide will help you understand how to navigate and use the features of the application." Margin="0,0,0,15"/>
                
                <!-- Section: Explanation of tabs -->
                <TextBlock Text="Navigating between tabs:" FontWeight="SemiBold" FontSize="14" Margin="0,5,0,5"/>
                <StackPanel Margin="10,0,0,10">
                    <TextBlock Text="• Teams: Displays the list of available teams." Margin="0,5"/>
                    <TextBlock Text="• Team Players: Shows the players of the selected team." Margin="0,5"/>
                    <TextBlock Text="• Player: Displays specific details of the selected player." Margin="0,5"/>
                </StackPanel>
                
                <!-- Section: Explanation of main actions -->
                <TextBlock Text="Main actions:" FontWeight="SemiBold" FontSize="14" Margin="0,5,0,5"/>
                <StackPanel Margin="10,0,0,10">
                    <TextBlock Text="• Add team or player: Use the 'Add' button in the 'Teams Players' or 'Player' tab and fill the form." Margin="0,5"/>
                    <TextBlock Text="• Edit team or player: Select an item, press 'Edit' and fill the form." Margin="0,5"/>
                    <TextBlock Text="• Delete team or player: Choose team or player and press 'Delete'." Margin="0,5"/>
                    <TextBlock Text="• Exit the application: Select 'File > Exit' or use the shortcut Ctrl + Q." Margin="0,5"/>
                </StackPanel>
                
                <!-- Section: Keyboard shortcuts -->
                <TextBlock Text="Keyboard shortcuts:" FontWeight="SemiBold" FontSize="14" Margin="0,5,0,5"/>
                <StackPanel Margin="10,0,0,10">
                    <TextBlock Text="• Ctrl + A: Add team or player" Margin="0,5"/>
                    <TextBlock Text="• Ctrl + E: Edit team or player" Margin="0,5"/>
                    <TextBlock Text="• Ctrl + D: Delete team or player" Margin="0,5"/>
                    <TextBlock Text="• Ctrl + H: Open help" Margin="0,5"/>
                    <TextBlock Text="• Ctrl + I: View info" Margin="0,5"/>
                    <TextBlock Text="• Ctrl + Q: Quit the application" Margin="0,5"/>
                </StackPanel>
                
                <!-- Section: Useful tips -->
                <TextBlock Text="Useful tips:" FontWeight="SemiBold" FontSize="14" Margin="0,5,0,5"/>
                <StackPanel Margin="10,0,0,10">
                    <TextBlock Text="• Use the toolbar to perform quick actions." Margin="0,5"/>
                </StackPanel>

            </StackPanel>
            
        </ScrollViewer>

    </Grid>
</Window>
